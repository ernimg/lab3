const express = require('express');
const multer = require('multer');
const fs = require('fs');
const path = require('path');

const app = express();
const port = 3000;

// Konfiguracja multer do obsługi przesyłania plików
const upload = multer({ dest: 'uploads/' }); // Tymczasowy folder przechowywania plików

// Endpoint do przesyłania i przenoszenia plików
app.post('/upload', upload.single('file'), (req, res) => {
    const file = req.file;

    if (!file) {
        return res.status(400).send('Nie przesłano żadnego pliku.');
    }

    const newFileName = `nowa_nazwa_${Date.now()}.xlsx`; // Przykładowa zmiana nazwy
    const targetPath = path.join('D:/dane', newFileName); // Ścieżka docelowa (np. dysk D:/dane)

    // Przenoszenie i zmiana nazwy pliku
    fs.rename(file.path, targetPath, (err) => {
        if (err) {
            console.error('Błąd podczas przenoszenia pliku:', err);
            return res.status(500).send('Nie udało się przenieść pliku.');
        }

        res.send(`Plik został pomyślnie przeniesiony do: ${targetPath}`);
    });
});

// Uruchamianie serwera
app.listen(port, () => {
    console.log(`Serwer działa na http://localhost:${port}`);
});
